#! /bin/sh

# Test that within Tool Item::stackable is initialized to false
# print twice, 
# first, check for attempted funny business with functions--e.g., Tool::isStackable
# second, force use of Item::isStackable
# both outputs must evaluate to false

cat <<EOF > test000.cpp

#include <iostream>
#include <iomanip>

#include "Tool.h"

using std::cout;

int main(){
    Item *tool = new Tool();    

    cout.setf( std::ios::boolalpha );

    cout << tool->isStackable()       << "\n";
    cout << tool->Item::isStackable() << "\n";   

    return 0;
}
EOF

g++ -c test000.cpp 
g++ -o test000 test000.o Tool.o Item.o

./test000