#! /bin/sh

# Test that Item::name was set from within Tool::read

cat <<EOF > test001.cpp

#include <iostream>
#include <iomanip>
#include <sstream>

#include "Tool.h"

using std::cout;
using std::istringstream;

int main(){
    Item *tool = new Tool(); 

    istringstream ins( "TestTool" );

    tool->read( ins );

    cout << tool->getName()       << "\n";
    cout << tool->Item::getName() << "\n";   

    return 0;
}
EOF

g++ -c test001.cpp 
g++ -o test001 test001.o Tool.o Item.o

./test001