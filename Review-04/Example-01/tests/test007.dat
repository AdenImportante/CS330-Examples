#! /bin/sh

# Test Armour::read and Armour::display
# formatting must match

cat <<EOF > test007.cpp

#include <iostream>
#include <iomanip>
#include <sstream>

#include "Armour.h"

using std::cout;
using std::istringstream;

int main(){
    Item *armour = new Armour(); 

    istringstream ins( "Boots Iron 1 2 FeatherFalling 3 Water" );

    armour->read( ins );    
    armour->display( cout );  

    return 0;
}
EOF

g++ -c test007.cpp 
g++ -o test007 test007.o Armour.o Item.o

./test007