#! /bin/sh

# Test Consumable::read and Consumable::display
# formatting must match

cat <<EOF > test012.cpp

#include <iostream>
#include <iomanip>
#include <sstream>

#include "Consumable.h"

using std::cout;
using std::istringstream;

int main(){
    Item *consumable = new Consumable(); 

    istringstream ins( "Luck-II-Potion Luck+50% 1" );

    consumable->read( ins );    
    consumable->display( cout );  

    return 0;
}
EOF

g++ -c test012.cpp 
g++ -o test012 test012.o Consumable.o Item.o

./test012